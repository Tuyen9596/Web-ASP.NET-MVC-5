<link href="~/Content/css/style_login_form.css" rel="stylesheet" /> 
<div style="height:500px;">
    <br />
    <input type="button" value="Dang Nhap" id="btnlogin" class="btn btn-primary" />
    <div id="popup_login">
        <div class="login-form" id="login-form">
            <div style="clear:both;text-align:right;margin-bottom:0;">
                <span id="close-form" class="btn btn-danger">X</span>
            </div>
            <div class="form-info">
                <form>
                    <input type="text" class="email"  id="txtname" placeholder="Tai Khoan" required="" />
                    <input type="password" class="password" id="txtpass" placeholder="Mat Khau" required="" />
                    <p><a href="#">Forgot password?</a></p>
                    <ul class="login-buttons">
                        <li id="btndangnhap"><input type="submit" value="Dang Nhap" "/></li>
                        <li><a href="#" class="hvr-sweep-to-left" id="btndangky">Dang Ky</a></li>
                    </ul>
              </form>
            </div>

        </div>
    </div>
</div>
